<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory
        android:title="Einstellungen">

        <SwitchPreference
            android:key="pref_sound_switch"
            android:title="@string/pref_sound_switch"
            android:summaryOn="@string/pref_sound_switch_summary_on"
            android:summaryOff="@string/pref_sound_switch_summary_off"
            android:defaultValue="false"/>

        <SwitchPreference
            android:key="pref_shake_switch"
            android:title="@string/pref_shake_switch"
            android:summaryOn="@string/pref_shake_switch_summary_on"
            android:summaryOff="@string/pref_shake_switch_summary_off"
            android:defaultValue="false"/>

        <SwitchPreference
            android:key="@string/pref_language"
            android:title="@string/pref_language"
            android:summaryOn="@string/pref_language_summary_on"
            android:summaryOff="@string/pref_language_summary_off"
            android:defaultValue="@string/pref_language_summary_off"/>

        <SwitchPreference
            android:key="@string/pref_count_point"
            android:title="@string/pref_count_point"
            android:summaryOn="@string/pref_point_summary_on"
            android:summaryOff="@string/pref_point_summary_off"
            android:defaultValue="@string/pref_point_summary_off"/>

        <SwitchPreference
           android:key="@string/pref_waste"
           android:title="@string/pref_waste"
           android:summaryOn="@string/pref_waste_summary_on"
           android:summaryOff="@string/pref_waste_summary_off"
           android:defaultValue="@string/pref_waste_summary_off"/>





   <ListPreference
               android:key="@string/sp_key_background_color"
               android:title="Background Color"
               android:entries="@array/background_color_names_array"
               android:entryValues="@array/background_color_values_array"
               android:icon="@drawable/icon_backroundcolor"
               android:summary="@string/summary_backroundcolor"
               android:defaultValue="@color/white"
               />

     </PreferenceCategory>


   </PreferenceScreen>