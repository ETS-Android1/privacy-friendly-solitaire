<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context=".Activities.BackgroundActivity">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".MainActivity"
            >

            <TextView
                android:layout_width="match_parent"
                android:text="Background color"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/button_text_size"
                android:id="@+id/colortext"
                android:layout_height="50dp"
                android:gravity="center"/>

            <RadioGroup
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:id="@+id/radio_group1"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/colortext"
                android:layout_height="210dp">



                <RadioButton
                android:id="@+id/checkbox_green"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/button_text_size"
                android:text="Green"
                android:textColor="@color/black"
                android:background="@color/green"
                android:onClick="onCheckBoxClicked"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/radio_group1"
                />

            <RadioButton
                android:id="@+id/checkbox_yellow"
                android:textSize="@dimen/button_text_size"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Yellow"
                android:textColor="@color/black"
                android:background="@color/yellow"
                android:onClick="onCheckBoxClicked"
                android:layout_below="@id/checkbox_green"
                />

            <RadioButton
                android:id="@+id/checkbox_blue"
                android:textSize="@dimen/button_text_size"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Blue"
                android:textColor="@color/black"
                android:background="@color/middleblue"
                android:onClick="onCheckBoxClicked"
                android:layout_below="@id/checkbox_yellow"
                />

            <RadioButton
                android:id="@+id/checkbox_grey"
                android:layout_height="wrap_content"
                android:textSize="@dimen/button_text_size"
                android:layout_width="match_parent"
                android:text="Grey"
                android:textColor="@color/black"
                android:background="@color/middlegrey"
                android:onClick="onCheckBoxClicked"
                android:layout_below="@id/checkbox_blue"
                />

            </RadioGroup>

            <Button
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/white"
                android:id="@+id/cancle_button"
                android:layout_gravity="right"
                android:layout_below="@id/radio_group1"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimaryDark"
                android:layout_width="130dp" />
            />
            <Button
                android:layout_height="wrap_content"
                android:text="OK"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/white"
                android:id="@+id/ok_button"
                android:layout_gravity="right"

                android:background="@color/colorPrimaryDark"
                android:layout_below="@+id/radio_group1"
                android:layout_width="130dp" />

        </RelativeLayout>


    </LinearLayout>





</ScrollView>
